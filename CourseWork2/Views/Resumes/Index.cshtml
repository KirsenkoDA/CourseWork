@model IEnumerable<EmploymentAgency.Models.Resume>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Index";
}

<h1>Список резюме</h1>

<p>
    <button type="button" class="btn btn-success"><a asp-action="Create" >Create New</a></button>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                    @*@{
                        int statusColour = Convert.ToInt32(item.Status.Id);
                    }
                    @if (statusColour == 1)
                    {
                        <button style="background-color:red;"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    }
                    else
                    {
                        <button style="background-color:green;"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    }*@
                    <button type="button" class="btn btn-warning"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    @inject UserManager<IdentityUser> UserManager
                    @{
                        var currentUser = await UserManager.GetUserAsync(User);
                        var currentUserId = currentUser.Id;
                    }
                   @* Если резюме принадлежат пользователю, то он может их изменять и удалять*@
                    @if (item.User.Id == currentUserId)
                    {
                        <button type="button" class="btn btn-primary"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                        <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                    }
                    @*Если резюме принадлежит пользователю, то он не может откликаться*@
                    @if (item.User.Id != currentUserId)
                    {
                        <button type="button" class="btn btn-success"><a asp-action="Respond" asp-route-id="@item.Id">Respond</a></button>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
